<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/digitTwo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="121dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintRight_toRightOf="@+id/digitThree"
        app:layout_constraintBaseline_toBaselineOf="@+id/digitThree"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/digitOne" />

    <EditText
        android:id="@+id/digitOne"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        android:layout_marginStart="80dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/digitTwo"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/digitThree"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="121dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/digitFour"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintBaseline_toBaselineOf="@+id/digitThree"
        tools:layout_constraintBaseline_creator="1" />

</android.support.constraint.ConstraintLayout>